{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "typeRoots": ["./@types", "node_modules/@types"],
    "paths": {
      "@src/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@config/*": ["./src/config/*"],
      "@logger/*": ["./src/logger/*"],
      "@plugins/*": ["./src/plugins/*"],
      "@model/*": ["./src/model/*"],
      "@modules/*": ["./src/modules/*"],
      "@test/*": ["./test/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
