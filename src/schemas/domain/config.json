{
  "$id": "https://example.com/domain/config",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "url": { "type": "string" },
    "schedule": {
      "$ref": "#/$defs/Schedule"
    },
    "osInfo": {
      "$ref": "domain/os-info.json"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "script": { "type": "string" },
          "retries": { "type": "number", "minimum": 0, "default": 0 },
          "ignoreFailure": { "type": "boolean", "default": false }
        },
        "required": ["name", "script"],
        "additionalProperties": false
      }
    },
    "limitations": {
      "$ref": "domain/limitations.json"
    }
  },
  "required": ["name", "schedule", "osInfo", "steps"],
  "additionalProperties": false,
  "$defs": {
    "Schedule": {
      "type": "object",
      "properties": {
        "times": { "type": "number" },
        "cron": { "type": "string" }
      },
      "required": ["times", "cron"],
      "additionalProperties": false
    }
  }
}
