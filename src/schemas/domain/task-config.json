{
  "$id": "https://example.com/domain/config",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "repository": {
      "$ref": "#/$defs/Repository"
    },
    "cronString": { "type": "string" },
    "osInfo": {
      "$ref": "domain/os-info.json"
    },
    "steps": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Step"
      }
    },
    "limitations": {
      "$ref": "domain/limitations.json"
    }
  },
  "required": ["name", "osInfo"],
  "additionalProperties": false,
  "$defs": {
    "Step": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "script": { "type": "string" },
        "ignoreFailure": { "type": "boolean", "default": false }
      },
      "required": ["name", "script"],
      "additionalProperties": false
    },
    "Repository": {
      "type": "object",
      "properties": {
        "url": { "type": "string" },
        "branch": { "type": "string" }
      },
      "required": ["url", "branch"],
      "additionalProperties": false
    }
  }
}
