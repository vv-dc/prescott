{
  "$id": "https://example.com/dto/docker-build",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "tag": {
      "type": "string"
    },
    "osInfo": {
      "$ref": "#/$defs/OsInfoDto"
    },
    "cmd": {
      "type": "string"
    },
    "copy": {
      "type": "boolean",
      "default": false
    },
    "once": {
      "type": "boolean",
      "default": true
    }
  },
  "required": ["tag", "osInfo", "cmd", "once", "copy"],
  "additionalProperties": false,
  "$defs": {
    "OsInfoDto": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": ["number", "string"]
        }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  }
}
